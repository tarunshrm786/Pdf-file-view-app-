<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/book3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

    <Button
        android:id="@+id/pdfbook"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Ratio and Proportion"
        android:textSize="22dp"
        android:background="@drawable/buttonstyle"
        />
    <Button
        android:id="@+id/speedbook"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Speed and Distance"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstyle"
        />
        <Button
            android:id="@+id/percentagebook"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Percentage"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonstyle"
            />
        <Button
            android:id="@+id/profitbook"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Profit and Loss"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonstyle"
            />
        <Button
            android:id="@+id/timebook"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Time and Work"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonstyle"
            />
    </LinearLayout>

</RelativeLayout>